{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": ""
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0.9",
              "createOptions": "{}"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0.9"
            }
          }
        },
        "modules": {
          "redis": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "redis",
              "createOptions": "{}"
            }
          },
          "isbwriter": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "rdscompany/isbwriter:0.0.4-amd64",
              "createOptions": "{\"Env\":[\"TOPIC=modbus-data\"]}"
            }
          },
          "Modbus": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge/modbus:1.0",
              "createOptions": "{}"
            }
          },
          "Modbussimulator": {
            "version": "2.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "rdscompany/modbussimulator:2.0",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"502/tcp\":[{\"HostPort\":\"502\"}]}}}"
            }
          },
          "sql": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "microsoft/mssql-server-linux:2017-latest",
              "createOptions": "{\"Env\":[\"ACCEPT_EULA=Y\",\"MSSQL_SA_PASSWORD=Strong!Passw0rd\"],\"HostConfig\":{\"Mounts\":[{\"Source\":\"sqlVolume\",\"Target\":\"/var/opt/mssql\",\"Type\":\"volume\"}],\"PortBindings\":{\"1433/tcp\":[{\"HostPort\":\"1433\"}]}}}"
            }
          },
          "sqlfunction": {
            "version": "2.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "rdscompany/isbsqlfunction:0.0.25-amd64",
              "createOptions": "{}"
            }
          },
          "isbreader": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "rdscompany/isbreader:0.0.6-amd64",
              "createOptions": "{\"Env\":[\"TOPIC=modbus-data\"]}"
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToISBWriter": "FROM /messages/modules/Modbus/outputs/modbusOutput/* INTO BrokeredEndpoint(\"/modules/isbwriter/inputs/input1\")",
          "ISBReaderToIoTHub": "FROM /messages/modules/isbreader/outputs/* INTO $upstream",
          "ISBReaderToSQLFunction": "FROM /messages/modules/isbreader/outputs/* INTO BrokeredEndpoint(\"/modules/sqlfunction/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "Modbus": {
      "properties.desired": {
        "PublishInterval": 10000,
        "SlaveConfigs": {
          "Slave01": {
            "HwId": "PowerMeter-0a:01:01:01:01:01",
            "Operations": {
              "Op01": {
                "Count": "2",
                "DisplayName": "Voltage",
                "PollingInterval": "10000",
                "StartAddress": "400001",
                "UnitId": "1"
              }
            },
            "SlaveConnection": "10.0.0.4"
          }
        }
      }
    }
  }
}